    <style name="headerTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/grayDarkTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textAlignment">gravity</item>-->
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grayDarkTextColor</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grayDarkTextColor</item>
    </style>

    <style name="ToolBarWithCustomNavigationBack" parent="@style/toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>

    </style>

    <style name="AppTheme.AutoFillText" parent="TextAppearance.AppCompat.Small">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTheme.EditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_height">42dp</item>
        <item name="android:spacing">1.5dp</item>
        <!--<item name="font">@font/antipasto_extrabold</item>-->
        <!--<item name="app:fontFamily">@font/antipasto_extrabold</item>-->
    </style>

</resources>
