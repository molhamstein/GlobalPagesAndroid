<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    tools:context=".activities.JobDetailsActivity">
    
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="10dp">
        
        
        <ImageView
            android:id="@+id/applicantsBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:src="@mipmap/ic_profile_24dp"
            app:layout_constraintBottom_toBottomOf="@id/editBtn"
            app:layout_constraintEnd_toStartOf="@id/editBtn"
            app:layout_constraintTop_toTopOf="@id/editBtn" />
        
        
        <TextView
            android:id="@+id/applicantsNumber"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:padding="5dp"
            android:text="10"
            
            android:textColor="@color/white"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/applicantsBtn"
            app:layout_constraintTop_toTopOf="@id/applicantsBtn" />
        
        
        <ImageView
            android:id="@+id/editBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yellow_circle"
            android:cropToPadding="true"
            android:padding="5dp"
            android:src="@drawable/ic_edit_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/job_holder"
            
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editBtn" />
        
        <TextView
            android:id="@+id/positionTitle"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="0dp"
            android:text="Senior Android Developer"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/image" />
        
        <TextView
            android:id="@+id/companyName"
            style="@style/AppTheme.TextAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="0dp"
            android:text="Open System Technology"
            android:textColor="@color/grayDarkTextColor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toBottomOf="@id/positionTitle" />
        
        <TextView
            android:id="@+id/location"
            style="@style/AppTheme.TextAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="0dp"
            android:text="Damascus, Syria"
            android:textColor="@color/grayLightTextColor"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toBottomOf="@id/companyName" />
        
        
        <TextView
            android:id="@+id/date"
            style="@style/AppTheme.TextAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="0dp"
            android:text="Today"
            android:textColor="@color/grayDarkTextColor"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categories" />
        
        
        <LinearLayout
            android:id="@+id/categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/date"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toBottomOf="@id/location">
            
            
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/categoryName"
                style="@style/AppTheme.TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_view_tag_bg"
                android:paddingStart="@dimen/lg_padding"
                android:paddingLeft="@dimen/lg_padding"
                android:paddingEnd="@dimen/lg_padding"
                android:paddingRight="@dimen/lg_padding"
                android:text="@string/Category"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/subCategoryName"
                style="@style/AppTheme.TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_view_tag_bg"
                android:paddingStart="@dimen/lg_padding"
                android:paddingLeft="@dimen/lg_padding"
                android:paddingEnd="@dimen/lg_padding"
                android:paddingRight="@dimen/lg_padding"
                android:text="@string/SubCategory"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        
        
        </LinearLayout>
        
        <android.support.v7.widget.CardView
            android:id="@+id/applyBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date">
            
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="@color/grayDarkTextColor"
                android:text="@string/Apply"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        
        <android.support.v7.widget.CardView
            android:id="@+id/deactivateBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date">
            
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/deactivate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/red_border"
                android:text="@string/deactivate"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        
        <TextView
            android:id="@+id/descriptionText"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/Description"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date" />
        
        <View
            android:id="@+id/headerLine1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/descriptionText"
            app:layout_constraintStart_toStartOf="@id/descriptionText"
            app:layout_constraintTop_toBottomOf="@id/descriptionText" />
        
        
        <TextView
            android:id="@+id/descriptionValue"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="@string/Description"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLine1" />
        
        
        <TextView
            android:id="@+id/responsibilitiesText"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/responsibilities"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionValue" />
        
        <View
            android:id="@+id/headerLine2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/responsibilitiesText"
            app:layout_constraintStart_toStartOf="@id/responsibilitiesText"
            app:layout_constraintTop_toBottomOf="@id/responsibilitiesText" />
        
        
        <TextView
            android:id="@+id/responsibilitiesValue"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="@string/Description"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLine2" />
        
        
        <TextView
            android:id="@+id/qualificationsText"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/qualifications"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/responsibilitiesValue" />
        
        <View
            android:id="@+id/headerLine3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/qualificationsText"
            app:layout_constraintStart_toStartOf="@id/qualificationsText"
            app:layout_constraintTop_toBottomOf="@id/qualificationsText" />
        
        
        <TextView
            android:id="@+id/qualificationsValue"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="@string/Description"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLine3" />
        
        
        <TextView
            android:id="@+id/skillsText"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/skills"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qualificationsValue" />
        
        
        <View
            android:id="@+id/headerLine4"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/skillsText"
            app:layout_constraintStart_toStartOf="@id/skillsText"
            app:layout_constraintTop_toBottomOf="@id/skillsText" />
        
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/headerLine4"
            tools:itemCount="5"
            tools:listitem="@layout/skill_item_layout" />
        
        
        <TextView
            android:id="@+id/salaryText"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/salary_range"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skills" />
        
        <View
            android:id="@+id/headerLine5"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/salaryText"
            app:layout_constraintStart_toStartOf="@id/salaryText"
            app:layout_constraintTop_toBottomOf="@id/salaryText" />
        
        
        <TextView
            android:id="@+id/salaryValue"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="@string/Description"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLine5" />
        
        
        <TextView
            android:id="@+id/educationText"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/education_level"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/salaryValue" />
        
        <View
            android:id="@+id/headerLine6"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/educationText"
            app:layout_constraintStart_toStartOf="@id/educationText"
            app:layout_constraintTop_toBottomOf="@id/educationText" />
        
        
        <TextView
            android:id="@+id/educationValue"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="@string/Description"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLine6" />
        
        
        <TextView
            android:id="@+id/jobTypeText"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/job_type"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/educationValue" />
        
        <View
            android:id="@+id/headerLine7"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/jobTypeText"
            app:layout_constraintStart_toStartOf="@id/jobTypeText"
            app:layout_constraintTop_toBottomOf="@id/jobTypeText" />
        
        
        <TextView
            android:id="@+id/jobTypeValue"
            style="@style/AppTheme.TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="@string/Description"
            android:textColor="@color/grayDarkTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLine7" />
        
        
        <android.support.v7.widget.CardView
            android:id="@+id/bottomApplyBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobTypeValue">
            
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bottomApply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:shadowColor="@color/grayDarkTextColor"
                android:text="@string/Apply"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        
        
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:clickable="true"
            android:padding="160dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>