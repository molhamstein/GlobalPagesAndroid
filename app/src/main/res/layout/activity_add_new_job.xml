<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    tools:context=".activities.AddNewJobActivity">
    
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        
        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:orientation="vertical">
            
            
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp">
                
                <TextView
                    android:id="@+id/baseInfoText"
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="@string/base_info"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                
                <View
                    android:id="@+id/headerLine1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="@id/baseInfoText"
                    app:layout_constraintStart_toStartOf="@id/baseInfoText"
                    app:layout_constraintTop_toBottomOf="@id/baseInfoText" />
            
            
            </android.support.constraint.ConstraintLayout>
            
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/businesses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/city_item_layout"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                tools:itemCount="6" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/name_ar"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nameArInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/name_ar"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/name_en"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nameEnInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/name_en"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Category"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/Category"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/SubCategory"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/subCategory"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/Category"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/salary_range"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/salaryInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/salary_range"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/education_level"
                    
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/educationLevel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/Category"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/job_type"
                    
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/jobType"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/Category"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                
                android:background="@color/grayDarkTextColor" />
            
            
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp">
                
                <TextView
                    android:id="@+id/descriptionText"
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="@string/Description"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                
                <View
                    android:id="@+id/headerLine2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="@id/descriptionText"
                    app:layout_constraintStart_toStartOf="@id/descriptionText"
                    app:layout_constraintTop_toBottomOf="@id/descriptionText" />
            
            
            </android.support.constraint.ConstraintLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/description_ar"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/descriptionArInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/description_ar"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/description_en"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/descriptionEnInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/description_en"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/responsibilities_ar"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/responsibilitiesArInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/responsibilities_ar"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/responsibilities_en"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/responsibilitiesEnInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/responsibilities_en"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/qualifications_ar"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/qualificationsArInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/qualifications_ar"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">
                
                <TextView
                    style="@style/AppTheme.TextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/qualifications_en"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/qualificationsEnInput"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:hint="@string/qualifications_en"
                    android:inputType="text"
                    android:textColor="@color/grayDarkTextColor"
                    android:textSize="14sp" />
            
            
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/grayDarkTextColor" />
            
            
            <LinearLayout
                android:id="@+id/skillsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                
                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    
                    <TextView
                        android:id="@+id/skillsText"
                        style="@style/AppTheme.TextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/skills"
                        android:textColor="@color/grayDarkTextColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line4" />
                    
                    <View
                        android:id="@+id/headerLine3"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="@id/skillsText"
                        app:layout_constraintStart_toStartOf="@id/skillsText"
                        app:layout_constraintTop_toBottomOf="@id/skillsText" />
                </android.support.constraint.ConstraintLayout>
                
                
                <TextView
                    android:id="@+id/editSkillsBtn"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/Add"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line4" />
            
            
            </LinearLayout>
            
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/skillsMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/headerLine3"
                tools:itemCount="5"
                tools:listitem="@layout/skill_item_layout" />
            
            
            <android.support.v7.widget.CardView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="@dimen/elevation"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/jobTypeValue">
                
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:shadowColor="@color/grayDarkTextColor"
                    android:text="@string/Submit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
        
        
        </LinearLayout>
        
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:clickable="true"
            android:padding="160dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</ScrollView>