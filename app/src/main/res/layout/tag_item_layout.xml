<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:contentDescription="@string/contentDescription"-->
    <!--android:src="@drawable/ic_close_white_24dp"-->
    <!--app:layout_constraintEnd_toEndOf="@+id/tag_toggle" />-->

    <com.sons.jawad.ninepatchlibrary.MaterialShadowContainerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ms9_shadowElevation="@dimen/md_elevation">

        <android.support.constraint.ConstraintLayout
            style="@style/commonNinePatchShadowItemViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sm_margin"
            android:layout_marginBottom="@dimen/md_margin"
            android:background="@drawable/white_radius_bg"
            android:padding="@dimen/zero">

            <ToggleButton
                android:id="@+id/tag_toggle"
                style="@style/AppTheme.MainToggle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/recyclerviewTagHeight"
                android:layout_margin="@dimen/zero"
                android:background="@drawable/ic_view_tag_bg"
                android:button="@null"
                android:drawablePadding="@dimen/sm_padding"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:padding="@dimen/sm_padding"
                android:paddingEnd="@dimen/lg_padding"
                android:paddingRight="@dimen/lg_padding"
                android:stateListAnimator="@null"
                android:text="tag"
                android:textAlignment="gravity"
                android:textAppearance="@style/AppTheme.AutoFillText"
                android:textColor="@color/white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/tag_toggle"
                app:layout_constraintEnd_toEndOf="@id/tag_toggle"
                app:layout_constraintRight_toRightOf="@+id/tag_toggle"
                app:layout_constraintTop_toTopOf="@+id/tag_toggle">

                <ImageView
                    android:id="@+id/tag_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_white_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tag_toggle"
                    app:layout_constraintEnd_toEndOf="@id/tag_toggle"
                    app:layout_constraintRight_toRightOf="@+id/tag_toggle"
                    app:layout_constraintTop_toTopOf="@+id/tag_toggle" />

            </FrameLayout>


        </android.support.constraint.ConstraintLayout>


    </com.sons.jawad.ninepatchlibrary.MaterialShadowContainerView>

</RelativeLayout>